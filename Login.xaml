<Window x:Class="Hoooon22_Program.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hoooon22_Program"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Center" Name="LoginGrid" 
              Height="200" Margin="0,0,0,0" VerticalAlignment="Center" Width="360">
            <Border BorderBrush="Black" BorderThickness="2">

                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Name="LoginTextSP" 
                            Height="100" Margin="10,0,0,10" Width="200">
                    <Border BorderBrush="Blue" BorderThickness="0.5"></Border>
                    <TextBox Name="IDTextBox" VerticalAlignment="Top"
                             Height="20" TextWrapping="Wrap" Text="ID" Margin="20, 20, 20, 0"/>
                    <TextBox Name="PwTextBox" VerticalAlignment="Top"
                             Height="20" TextWrapping="Wrap" Text="Password" Margin="20, 60, 20, 0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
