<Window x:Class="Hoooon22_Program.Finance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hoooon22_Program"
        mc:Ignorable="d"
        Title="Finance" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Content="Add Content" HorizontalAlignment="Right" VerticalAlignment="Top"
                Height="30" Margin="10"
                Click="Button_Click"/>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="4" Margin="10,50,10,10">
            <ScrollViewer>
                <StackPanel x:Name="Contents" Grid.Column="0">
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
